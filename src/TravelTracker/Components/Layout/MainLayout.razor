@using TravelTracker.Services
@inherits LayoutComponentBase
@inject IBuildInfoService BuildInfoService

<NavigationSpinner @ref="navigationSpinner" />

<div class="page">
    <NavMenu OnNavigating="HandleNavigating" />

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>

    <footer class="footer">
        <div class="container-fluid">
            <div class="footer-content">
                <span class="text-muted">Copyright @DateTime.Now.Year Luppes Consulting, Inc.</span>
                @if (buildInfo is not null)
                {
                    <div class="build-info">
                        <span class="build-number" title="@FormatBuildDate(buildInfo.BuildDate)">@buildInfo.BuildNumber</span>
                    </div>
                }
            </div>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private NavigationSpinner? navigationSpinner;
    private BuildInfo? buildInfo;

    protected override async Task OnInitializedAsync()
    {
        buildInfo = await BuildInfoService.GetBuildInfoAsync();
    }

    private string FormatBuildDate(string buildDate)
    {
        if (DateTime.TryParse(buildDate, out var date))
        {
            return $"Compiled {date.ToString("yyyy-MM-dd HH:mm:ss")}";
        }
        return buildDate;
    }
    private void HandleNavigating()
    {
        navigationSpinner?.StartNavigation();
    }
}
