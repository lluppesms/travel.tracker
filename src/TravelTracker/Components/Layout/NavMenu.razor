@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="" @onclick="NavigateToHome" @onclick:preventDefault>My Travel Tracker</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation"
                @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="@NavMenuCssClass" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link @GetActiveClass(RouteHome)" href="" @onclick="NavigateToHome" @onclick:preventDefault>
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @GetActiveClass(RouteLocations)" href="locations" @onclick="NavigateToLocations" @onclick:preventDefault>
                        <span class="bi bi-geo-alt-fill" aria-hidden="true"></span> Locations
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @GetActiveClass(RouteMap)" href="map" @onclick="NavigateToMap" @onclick:preventDefault>
                        <span class="bi bi-map-fill" aria-hidden="true"></span> Map View
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @GetActiveClass(RouteStatistics)" href="statistics" @onclick="NavigateToStatistics" @onclick:preventDefault>
                        <span class="bi bi-bar-chart-fill" aria-hidden="true"></span> Statistics
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @GetActiveClass(RouteUpload)" href="upload" @onclick="NavigateToUpload" @onclick:preventDefault>
                        <span class="bi bi-upload" aria-hidden="true"></span> Data
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @GetActiveClass(RouteChat)" href="chat" @onclick="NavigateToChat" @onclick:preventDefault>
                        <span class="bi bi-chat-dots-fill" aria-hidden="true"></span> Chat
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @GetActiveClass(RouteAbout)" href="about" @onclick="NavigateToAbout" @onclick:preventDefault>
                        <span class="bi bi-info-circle-fill" aria-hidden="true"></span> About
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <button id="theme-toggle" class="nav-link btn btn-link" onclick="window.themeToggle.toggle()" aria-label="Toggle theme" style="border: none; background: transparent;">
                        <span id="theme-icon">ðŸŒ™</span>
                    </button>
                </li>
            </ul>
            <AuthorizeView>
                <Authorized>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="navbar-text text-white me-2">Hello, @context.User.Identity?.Name!</span>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-sm btn-outline-light" href="MicrosoftIdentity/Account/SignOut">Logout</a>
                        </li>
                    </ul>
                </Authorized>
                <NotAuthorized>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-sm btn-outline-light" href="MicrosoftIdentity/Account/SignIn">Login</a>
                        </li>
                    </ul>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {
    [Parameter]
    public EventCallback OnNavigating { get; set; }

    private const string RouteHome = "";
    private const string RouteLocations = "locations";
    private const string RouteMap = "map";
    private const string RouteStatistics = "statistics";
    private const string RouteUpload = "upload";
    private const string RouteChat = "chat";
    private const string RouteAbout = "about";

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse navbar-collapse" : "navbar-collapse";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private Task NavigateToHome() => NavigateWithSpinner(RouteHome);
    private Task NavigateToLocations() => NavigateWithSpinner(RouteLocations);
    private Task NavigateToMap() => NavigateWithSpinner(RouteMap);
    private Task NavigateToStatistics() => NavigateWithSpinner(RouteStatistics);
    private Task NavigateToUpload() => NavigateWithSpinner(RouteUpload);
    private Task NavigateToChat() => NavigateWithSpinner(RouteChat);
    private Task NavigateToAbout() => NavigateWithSpinner(RouteAbout);

    private async Task NavigateWithSpinner(string path)
    {
        var currentPath = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        
        // Only show spinner if navigating to a different page
        if (!string.Equals(currentPath, path, StringComparison.OrdinalIgnoreCase))
        {
            await OnNavigating.InvokeAsync();
        }
        
        collapseNavMenu = true;
        NavigationManager.NavigateTo(path);
    }

    private string GetActiveClass(string path)
    {
        var currentPath = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        return string.Equals(currentPath, path, StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty;
    }
}
