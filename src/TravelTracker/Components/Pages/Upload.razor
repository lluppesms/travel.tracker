@page "/upload"

<PageTitle>Upload Data - Travel Tracker</PageTitle>

<h1>Upload Travel Data</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info" role="alert">
                <h4 class="alert-heading">ðŸ“¤ Data Upload</h4>
                <p>Import your travel data in bulk using JSON format.</p>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Upload JSON File</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="fileUpload" class="form-label">Select JSON file</label>
                        <input class="form-control" type="file" id="fileUpload" accept=".json" disabled>
                    </div>
                    
                    <div class="text-center py-4 border rounded bg-light">
                        <p class="text-muted">Drag and drop your JSON file here</p>
                        <p class="text-muted small">(Upload functionality coming soon)</p>
                    </div>
                    
                    <div class="mt-3">
                        <button class="btn btn-primary" disabled>
                            <span class="bi bi-upload"></span> Upload
                        </button>
                        <button class="btn btn-secondary ms-2" disabled>Validate</button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">JSON Format</h5>
                </div>
                <div class="card-body">
                    <p class="small">Your JSON file should follow this format:</p>
                    <pre class="small bg-light p-2"><code>{
  "locations": [
    {
      "name": "Yellowstone NP",
      "locationType": "National Park",
      "address": "WY 82190",
      "latitude": 44.427963,
      "longitude": -110.588455,
      "startDate": "2024-06-15",
      "endDate": "2024-06-18",
      "rating": 5,
      "comments": "Amazing!",
      "tags": ["national-park"]
    }
  ]
}</code></pre>
                    <a href="#" class="btn btn-sm btn-outline-primary">
                        <span class="bi bi-download"></span> Download Sample
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
