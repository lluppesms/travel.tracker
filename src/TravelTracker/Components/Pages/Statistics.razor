@page "/statistics"
@attribute [Authorize]

<PageTitle>Statistics - Travel Tracker</PageTitle>

<h1>Travel Statistics</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info" role="alert">
                <h4 class="alert-heading">ðŸ“Š Travel Analytics</h4>
                <p>View comprehensive statistics about your travel history and progress.</p>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h2 class="display-4">0</h2>
                    <p class="text-muted">Total Locations</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h2 class="display-4">0/50</h2>
                    <p class="text-muted">States Visited</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h2 class="display-4">0/63</h2>
                    <p class="text-muted">National Parks</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h2 class="display-4">0</h2>
                    <p class="text-muted">Total Days</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">States Visited</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-5">
                        <p class="text-muted">State progress map will appear here</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Location Types</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-5">
                        <p class="text-muted">Location type distribution chart will appear here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Travel Timeline</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-5">
                        <p class="text-muted">Travel timeline visualization will appear here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
